---
import logo from '@/assets/logo-blanco.svg'
import FacebookIcon from '@/components/icons/facebook.astro'
import InstagramIcon from '@/components/icons/instagram.astro'
---

<footer class='w-full h-fit'>
  <div
    class='relative bg-primary-blue text-white py-12 px-8 flex flex-col gap-2 items-center justify-center text-lg font-extralight tracking-wider text-center'
  >
    <div class='bg-footer'></div>
    <img
      id='background'
      src={logo.src}
      alt='Logo de Marasa'
      class='h-32 mb-8'
    />
    <p>Av. Paseo del Marlin 87, Las Gaviotas, 48328 Puerto Vallarta, Jal.</p>
    <p>&copy;2025 Marasa. Todos los derechos reservados</p>
  </div>

  <div class='w-full h-fit bg-primary-coral text-primary-blue'>
    <div
      class='w-full max-w-[1440px] mx-auto py-8 md:py-2 px-8 md:px-24 flex flex-col justify-center items-center md:flex-row md:flex-wrap md:justify-between gap-x-4 gap-y-8 md:gap-y-2'
    >
      <div
        class='flex flex-col items-center text-center md:text-start md:items-start md:flex-row gap-x-4 gap-y-2 [&>a]:hover:underline'
      >
        <a class='text-sm font-extralight tracking-[0.2rem] uppercase' href='#'
          >Aviso de privacidad</a
        >
        <div class='hidden md:block'>&bull;</div>
        <a class='text-sm font-extralight tracking-[0.2rem] uppercase' href='#'
          >TÃ©rminos y Condiciones</a
        >
      </div>

      <div class='md:hidden w-full h-[0.1rem] bg-primary-blue'></div>

      <div class='flex flex-row gap-4 [&>a]:hover:scale-110'>
        <a
          class='font-extralight tracking-[0.2rem] uppercase transition-all'
          href='https://www.instagram.com/marasaresidencial/'
          target='_blank'
        >
          <FacebookIcon class='size-6' />
        </a>
        <a
          class='font-extralight tracking-[0.2rem] uppercase transition-all'
          href='https://www.facebook.com/profile.php?id=61576808780179'
          target='_blank'
        >
          <InstagramIcon class='size-6' />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .bg-footer {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    opacity: 0.03;
    background-image: url('/favicon.png');
    background-size: 60px;
    background-position: top center;
  }
</style>
