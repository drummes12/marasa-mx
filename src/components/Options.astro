---
import CaretRight from './icons/caret-right.astro'
import Section from './Section.astro'

import { routesOptions } from '@/consts/routes'
---

<Section class='!min-h-fit my-16 px-8 sm:px-24 w-full'>
  <ul
    class='w-full rounded-lg bg-secondary/10 px-12 py-10 flex flex-col sm:flex-row sm:flex-wrap gap-6 items-center justify-center'
  >
    {
      routesOptions.map(({ label, path }) => (
        <li class='w-full sm:w-fit min-w-56 h-full rounded-sm border-2 border-secondary group overflow-hidden'>
          <a href={path} class='relative block'>
            <div class='absolute inset-0 w-full h-full bg-secondary -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out z-0' />

            <div class='flex-1 relative z-10 flex flex-row items-center justify-between gap-4 px-6 py-4'>
              <h4 class='text-md font-semibold uppercase text-secondary transition-colors duration-300 group-hover:text-white'>
                {label}
              </h4>
              <CaretRight class='size-4 text-secondary transition-colors duration-300 group-hover:text-white' />
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</Section>
